<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netcoreapp2.2;netcoreapp3.0;netstandard2.0</TargetFrameworks>
    <LangVersion>8.0</LangVersion>
    <AssemblyName>DanilovSoft.vRPC</AssemblyName>
    <RootNamespace>DanilovSoft.vRPC</RootNamespace>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Company />
    <Description>Asynchronous full-duplex Remote Procedure Call based on WebSocket</Description>
    <Copyright>Vitalii Danilov</Copyright>
    <Authors>Vitalii Danilov</Authors>
    <PackageId>DanilovSoft.vRPC</PackageId>
    <Product>DanilovSoft.vRPC</Product>
    <Version>1.1.4</Version>
  </PropertyGroup>

  <PropertyGroup>
    <DocumentationFile>DanilovSoft.vRPC.xml</DocumentationFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <NoWarn>1701;1702;1573;1591</NoWarn>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <NoWarn>1701;1702;1573;1591</NoWarn>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DefineConstants>LOG_RPC</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CSharp" Version="4.6.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="3.0.0" />
    <PackageReference Include="System.Text.Json" Version="4.6.0" Condition="'$(TargetFramework)' != 'netcoreapp3.0'" />
    <PackageReference Include="protobuf-net" Version="2.4.0" />
    <PackageReference Include="System.Memory" Version="4.5.3" />
    <PackageReference Include="System.Threading.Channels" Version="4.6.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\DanilovSoft.WebSocket\WebSockets\DanilovSoft.WebSocket.csproj" />
  </ItemGroup>

</Project>
